---
import Layout from '../layouts/Layout.astro';
import PageLayout from '../components/PageLayout.astro';
import { Github, Mail, Globe } from 'lucide-react';
---

<Layout title="About - AnnatarHe's Blog" description="Learn more about AnnatarHe">
  <PageLayout>
    <div class="max-w-2xl mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <img 
          src="https://github.com/AnnatarHe.png" 
          alt="AnnatarHe" 
          class="w-24 h-24 rounded-full mx-auto mb-6 border-2 border-teal-400"
        />
        <h1 class="text-3xl font-light mb-4 text-white">
          About
        </h1>
      </div>

      <div class="prose prose-lg prose-invert max-w-none">
        <p class="text-gray-300 leading-relaxed mb-8 text-center">
          I'm a software engineer passionate about building elegant solutions with modern web technologies. 
          I work with React, Go, Node.js, and explore blockchain, infrastructure, and state management systems.
        </p>

        <h2 class="text-xl font-semibold mb-4 text-white">Projects</h2>
        
        <div class="space-y-3 mb-8">
          <div>
            <a href="https://github.com/PromptPal/PromptPal" class="text-teal-400 hover:text-white transition-colors font-medium" target="_blank" rel="noopener noreferrer">
              PromptPal
            </a>
            <span class="text-gray-400 text-sm"> — Prompt Manager for developers</span>
          </div>
          
          <div>
            <a href="https://clippingkk.annatarhe.com" class="text-teal-400 hover:text-white transition-colors font-medium" target="_blank" rel="noopener noreferrer">
              ClippingKK
            </a>
            <span class="text-gray-400 text-sm"> — Kindle clipping management</span>
          </div>
          
          <div>
            <a href="https://asynctalk.com" class="text-teal-400 hover:text-white transition-colors font-medium" target="_blank" rel="noopener noreferrer">
              AsyncTalk
            </a>
            <span class="text-gray-400 text-sm"> — Web development podcast</span>
          </div>
          
          <div>
            <a href="https://shelltime.xyz" class="text-teal-400 hover:text-white transition-colors font-medium" target="_blank" rel="noopener noreferrer">
              ShellTime
            </a>
            <span class="text-gray-400 text-sm"> — Command history tracking</span>
          </div>
        </div>
        
        <div class="flex justify-center gap-6 text-sm">
          <a 
            href="https://github.com/AnnatarHe" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 text-gray-400 hover:text-teal-400 transition-colors"
          >
            <Github size={16} />
            <span>GitHub</span>
          </a>
          
          <a 
            href="https://i.annatarhe.com/"
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 text-gray-400 hover:text-teal-400 transition-colors"
          >
            <Globe size={16} />
            <span>Website</span>
          </a>
          
          <a 
            href="mailto:annatar.he@gmail.com"
            class="flex items-center gap-1.5 text-gray-400 hover:text-teal-400 transition-colors"
          >
            <Mail size={16} />
            <span>Email</span>
          </a>
        </div>
      </div>
    </div>
  </PageLayout>
</Layout>